.title-box
  %h1= @user.username
  - if @mine
    = link_to t('edit'), my_edit_path, class: 'edit-link'
  - elsif can? :read, @user
    = link_to I18n.t('edit'), edit_user_path(@user), class: 'edit-link'

.row
  .col-10
    = form_for @user, html: { class: 'py-4 form' } do |f|
      .form-row
        .col-2
          = f.label :username
        .col-4
          = f.text_field :username, class: 'form-control mb-4', disabled: true, value: @user.username
      .form-row
        .col-2
          = f.label :email
        .col-4
          = f.email_field :email, class: 'form-control mb-4', disabled: true, value: @user.email
      .form-row
        .col-4.offset-2
          %hr
      .form-row
        .col-2
          = f.label :otp_active
        .col-1
          .icon-toggler.small{ class: @user.otp_required_for_login? ? 'on' : 'off' }
            = svg 'lock'
            .on
              = svg 'check'
              %strong= I18n.t('active')
            .off
              %p= I18n.t('inactive')
        .col-3.text-right
          - if @user == current_user
            - if @user.otp_required_for_login
              %button.btn.icon-button{ type: 'button', 'data-toggle': 'modal', 'data-target': '#qrCode' }
                = svg 'iphone'
                = I18n.t('show_qr')
            - else
              = link_to enable_user_path(@user), method: :patch, class: 'icon-button btn' do
                = svg 'key'
                = I18n.t('activate')
      .form-row
        .col-4.offset-2
          %hr
      .form-row
        .col-2
          = f.label :roles
        .col-4
          %ul.list-group-flush
            - @user.roles.each do |role|
              %li.list-group-item
                = I18n.t("role.#{role.name}").html_safe

= render 'qrcode'
